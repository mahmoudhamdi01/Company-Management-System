@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Role @Model.RoleName Delete</h1>

<br />
<form asp-action="Delete">
    <div class="form-group mb-2">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class="form-control" asp-for="Id" />
    </div>
    <div class="form-group mb-2">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input readonly class="form-control" asp-for="RoleName" />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-info">Back To List</a>
</form>

