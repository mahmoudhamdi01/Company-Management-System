@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
<a asp-action="Create" class="btn btn-success mb-3">Create New Role</a>
@if (Model.Count() > 0)
{
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input type="text" placeholder="Role's Name" name="SearchValue" class="form-control" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>
        </form>
    </div>

    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Id)</td>
                <td>@Html.DisplayNameFor(D => D.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h2>There Is No Roles</h2>
    </div>
}
