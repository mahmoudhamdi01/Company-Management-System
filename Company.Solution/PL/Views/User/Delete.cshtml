 @model UserViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete @Model.FName User</h1>

<form asp-action="Delete">
    <input asp-for="Id" hidden />
    <input asp-for="Email" hidden />
    <div class="form-group">
        <label class="col-form-label" asp-for="FName"></label>
        <input readonly class="form-control" asp-for="FName" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="LName"></label>
        <input readonly class="form-control" asp-for="LName" />
    </div>
    <div class="form-group mb-2">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input readonly class="form-control" asp-for="PhoneNumber" />
    </div>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-info">Back To List</a>
</form>