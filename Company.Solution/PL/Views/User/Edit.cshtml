@model UserViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit @Model.FName User </h1>

<form asp-action="Edit">
    <input asp-for="Id" hidden />
    <input asp-for="Email" hidden />
    <div class="form-group">
        <label class="col-form-label" asp-for="FName"></label>
        <input  class="form-control" asp-for="FName" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="LName"></label>
        <input  class="form-control" asp-for="LName" />
    </div>
    <div class="form-group mb-2">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input  class="form-control" asp-for="PhoneNumber" />
    </div>
    <input type="submit" value="Save" class="btn btn-success"/>
    <a asp-action="Index" class="btn btn-info">Back To List</a>
</form>

