@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>
<br />
@if (Model.Count() > 0)
{
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input type="text" placeholder="User's Name" name="SearchValue" class="form-control" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>
        </form>
    </div>

    <br />
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Id)</td>
                <td>@Html.DisplayNameFor(D => D.FName)</td>
                <td>@Html.DisplayNameFor(D => D.LName)</td>
                <td>@Html.DisplayNameFor(D => D.Email)</td>
                <td>@Html.DisplayNameFor(D => D.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(D => D.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td>@Html.DisplayFor(E => user.Email)</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(",", user.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@user.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">
        <h2>There Is No Users</h2>
    </div>
}

